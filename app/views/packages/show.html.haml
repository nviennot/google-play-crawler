%br

.row
  .span8
    %h1 #{@app.title} #{@apk.version}
  .span4.inline
    %a.logo{:href => '/search'} Google Play With Me
  .span12
    %hr

.row
  .span6
    - if @app.description.present?
      %h4 Description
      %p= @app.description
    - if @app.recent_changes.present?
      %hr
      %h4 What's new
      %p= @app.recent_changes

  .span6
    %h4 Stats
    %table.table.table-condensed.table-bordered.app_info
      %tbody
        %tr
          %td.property Package
          %td.value= @apk_eid
        %tr
          %td.property Creator
          %td.value= @app.creator
        %tr
          %td.property Rating
          %td.value= number_with_precision @app.rating, :precision => 2
        %tr
          %td.property Number of Ratings
          %td.value= number_to_human @app.rating_count
        %tr
          %td.property Install Size
          %td.value= number_to_human_size @app.install_size
        %tr
          %td.property Download Count
          %td.value= @app.downloads_count_text
    %h4 Permissions
    %table.table.table-condensed.table-bordered.permissions
      %tbody
        - @app.permissions.sort.each do |perm|
          %tr
            %td.permission= perm

.row
  .span12
    %hr
    %h4 Files
    %h5
      #{@results.total} Files ⚫
      #{number_to_human_size(@results.facets['size']['total'].to_i)} ⚫
      #{number_with_delimiter(@results.facets['num_lines']['total'].to_i)} lines

    %ul.unstyled
      - @results.each do |source|
        %li= link_to source[:path], "/packages/#{@apk_eid}/#{source[:path]}"
