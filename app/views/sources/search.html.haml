.row
  .span12
    = bootstrap_flash
    .page-header
      %h1 Search Sources

.row
  .span12.offset1
    = form_tag '/search', :class => 'form-inline search', :method => :get do
      = text_field_tag :query,   params[:query],   :autocomplete => :off, :placeholder => 'Query'
      = text_field_tag :pattern, params[:pattern], :autocomplete => :off, :placeholder => 'Pattern (lucene)'
      = text_field_tag :filter,  params[:filter],  :autocomplete => :off, :placeholder => 'Filter (ruby regex)'

      - options = [10, 25, 50, 100].map { |n| ["#{n} files per page", n] }
      = select_tag  :per_page, options_for_select(options, params[:per_page] || 10), :class => 'input-medium'

      = button_tag :id => 'refresh', :class => 'btn' do
        %i.icon-refresh
        Refresh

#results
  = render 'results'
