- if @results
  .row
    .span6
      %p
        Matched #{@results.total} files
        (took #{@results.raw['took']/1000.0}s)

    .span6.source-paginate
      = will_paginate @pagination

- if @files
  .row
    .span12
      %table.table.table-condensed.table-bordered.lines
        %thead
          %tr
            %th Android Package
            %th Path
            %th Line
        %tbody
          - @files.each do |file|
            - file[:lines].each do |line|
              %tr
                %td.eid=  link_to file[:app_id],   "/packages/#{file[:app_id]}"
                %td.path= link_to file[:filename], "/packages/#{file[:app_id]}/#{file[:filename]}"
                %td.line.CodeRay= raw CodeRay.scan(line, :java).html


- if @results
  .row
    .span12.source-paginate
      = will_paginate @pagination
